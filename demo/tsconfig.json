{
	"compilerOptions": {
		"module": "esnext",
		"target": "es2017",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmitHelpers": true,
		"noEmitOnError": true,
		"skipLibCheck": true,
		"lib": [
			"es6",
			"dom",
			"es2015.iterable",
			"es2017"
		],
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"src/*"
			]
		},
		"removeComments": false
	},
	"files": [
		"./references.d.ts",
		"./src/main.ts",
		"./src/polyfills.ts"
	],
	"exclude": [
		"node_modules",
		"platforms",
		"../src/node_modules"
	],
	"include": [
		"../src"
	]
}